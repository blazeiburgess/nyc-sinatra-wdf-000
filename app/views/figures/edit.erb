<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label>Name:<label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
  <%# binding.pry %>  
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" value="<%= landmark.id %>" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" <% 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
  <% end %>
  <input type="text" name="landmark[name]" id='new_landmark'>
  <% Title.all.each do |title| %>
    <input type="checkbox" value="<%= title.id %>" name="figure[title_ids][]" id="title_<%= title.id %>" <% 'checked' if @figure.landmarks.include?(landmark) %>><%= title.name %></input>
  <% end %>
  <input type="text" name="title[name]" id="new_title">
  <input type="submit" value="Edit Figure">
</form>
<h1>Edit <%= @figure.name %></h1>
